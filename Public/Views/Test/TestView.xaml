<UserControl x:Class="Public.Views.TestView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Public.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Width="900" Height="700">

    <ContentControl Template="{StaticResource OverlayTemplate}">
        <Border Padding="25" Background="#FFF">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="50" />
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0">
                    <TextBlock Text="{Binding Text}" />
                    <Button Content="Click Me!" x:Name="ProcessClick" Width="150" Height="50" />
                </StackPanel>

                <Button Grid.Row="1" x:Name="CloseOverlay" Content="Ok" Width="150" Height="50" HorizontalAlignment="Right" />
            </Grid>
        </Border>
    </ContentControl>
</UserControl>
